#!/usr/bin/env python

import csv
import os

from jinja2 import Environment, FileSystemLoader


def get_books(path):
    if not os.path.exists(path):
        return
    f = open(path)
    reader = csv.DictReader(f)
    return list(reader)


def render(values):
    env = Environment(loader=FileSystemLoader('themes/default'))
    template = env.get_template('index.html')
    return template.render(values)


def main():
    path = 'books.csv'
    results = get_books(path)
    if not results:
        print("Couldn't get books")
        return

    values = {
        'books': results
    }

    html = render(values)
    print(html)


if __name__ == '__main__':
    main()
